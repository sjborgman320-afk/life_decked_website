async function loadCards() {
  try {
    const response = await fetch('https://clmrqyimovyudraksfze.supabase.co/rest/v1/life_decked_card_details_view?select=*', {
      method: 'GET',
      headers: {
        'APIKey': 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImNsbXJxeWltb3Z5dWRyYWtzZnplIiwicm9sZSI6ImFub24iLCJpYXQiOjE3Mjc0NDcyNDMsImV4cCI6MjA0MzAyMzI0M30.1N7mOdA8CyiVL1HcBgR67Er53F109HckXpUXnpJfv2s'
        // 'Authorization': 'Bearer YOUR_API_KEY', // Replace with your actual key or token
        'Content-Type': 'application/json'
      }
    });

    const cards = await response.json();

    const menu = document.getElementById('cards-menu');
    menu.innerHTML = ''; // Clear existing items

    cards.forEach(card => {
      const li = document.createElement('li');
      const a = document.createElement('a');
      a.href = `/cards/${card.id}`;
      a.textContent = card.name;
      li.appendChild(a);
      menu.appendChild(li);
    });
  } catch (error) {
    console.error('Failed to load cards:', error);
  }
}

document.addEventListener('DOMContentLoaded', loadCards);
